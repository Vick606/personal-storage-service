<%- include('layout', { user: user }) %>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">My Folders</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% folders.forEach(folder => { %>
                <div class="bg-gray-100 p-4 rounded-lg">
                    <h3 class="text-lg font-semibold mb-2"><%= folder.name %></h3>
                    <a href="/folders/<%= folder.id %>" class="text-blue-500 hover:text-blue-600">Open</a>
                </div>
            <% }) %>
        </div>
        <button id="newFolderBtn" class="mt-4 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
            New Folder
        </button>
    </div>
</div>